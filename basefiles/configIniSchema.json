{
    "synthetic-workload":{
        "type":"object",
        "required":false,
        "workloadFile":{"type":"string","required":true,"batsim":[{"-w":"{}"}]},
        "profileType":{"type":"string","required":true,"regex":"^(delay|parallel_homogeneous)$"},
        "speed":{"type":"float","required":false}
    },
    "grizzly-workload":{
        "type":"object",
        "required":false,
        "workloadFile":{"type":"string","required":true,"batsim":[{"-w":"{}"}]},
        "profileType":{"type":"string","required":true,"regex":"^(delay|parallel_homogeneous)$"},
        "speed":{"type":"float","required":false}
    },
    "nodes":{"type":"int","required":true,"real_start":[{"nodes":"{}"}]},
    "cores":{"type":"int"},
    "speeds":{"type":"string"},
    "share-packing":{"type":"bool","true_batsim":[{"--share-packing":""}]},
    "share-packing-holdback":{"type":"int","batsim":[{"--share-packing-holdback":"{}"}]},
    "core-percent":{"type":"float","batsim":[{"--core-percent":"{}"}]},
    "checkpointing-on":{"type":"bool","true_batsim":[{"--checkpointing-on":""}]},
    "SMTBF":{"type":"float","batsim":[{"--SMTBF":"{}"}]},
    "checkpoint-interval":[
        {"type":"string","regex":"^[0-9]+$","batsim":[{"--checkpointing-interval":"{}"}]},
        {"type":"string","regex":"^optimal$","batsim":[{"--compute-checkpointing":""}]}
    ],  
    "performance-factor":{"type":"float","batsim":[{"--performance-factor":"{}"}]},
    "calculate-checkpointing":{"type":"bool","true_batsim":[{"--compute-checkpointing":""}]},
    "platformFile":{"type":"string","required":true,"batsim":[{"-p":"{}"}]},
    "seed-failures":{"type":"bool","true_batsim":[{"--seed-failures":""}]},
    "batsim-log":[
        {"type":"string","regex":"^(info|information)$","batsim":[{"-v":"information"}]},
        {"type":"string","regex":"^(network-only|debug|quiet)$","batsim":[{"-v":"{}"}]},
        {"type":"string","regex":"^[-]q$","batsim":[{"-q":""}]},
        {"type":"none","batsim":[{"-q":""}]}
    ],
    "batsched-log":[
        {"type":"string","regex":"^(info|information)$","batsched":[{"--verbosity":"info"}]},
        {"type":"string","regex":"^(silent|debug|quiet)$","batsched":[{"--verbosity":"{}"}]},
        {"type":"none","batsched":[{"--verbosity":"quiet"}]}
    ],
    "repair-time":{"type":"float","batsim":[{"--repair-time":"{}"}]},
    "fixed-failures":{"type":"float","batsim":[{"--fixed-failures":"{}"}]},
    "checkpointError":{"type":"float","batsim":[{"--compute_checkpointing_error":"{}"}]},
    "batsched-policy":[
        {"type":"string","regex":"^conservative_bf$","batsim":[{"--forward-profiles-on-submission":""}]},
        {"type":"string","batsched":[{"-v":"{}"}]},
        {"type":"none","required":true}
    ],
    "forward-profiles-on-submission":{"type":"bool","true_batsim":[{"--forward-profiles-on-submission":""}]},
    "queue-depth":{"type":"int","batsim":[{"--queue-depth":"{}"}]},
    "reservations-start":{"type":"string","batsim":[{"--reservations-start":"{}"}]},
    "MTTR":{"type":"float","batsim":[{"--MTTR":"{}"}]},
    "seed-repair-times":{"type":"bool","true_batsim":[{"--seed-repair-times":""}]},
    "checkpoint-batsim-interval":{"type":"string","batsim":[{"--checkpoint-batsim-interval":"{}"}]},
    "submission-time-after":{"type":"string","batsim":[{"--submission-time-after":"{}"}]},
    "submission-time-before":{"type":"string","batsim":[{"--submission-time-before":"{}"}]},
    "copy":{"type":"string","batsim":[{"--copy":"{}"}]},
    "disable-dynamic-jobs":[
        {"type":"bool","false_batsim":[{"--enable-dynamic-jobs":""},{"--acknowledge-dynamic-jobs":""}]},
        {"type":"none","batsim":[{"--enable-dynamic-jobs":""},{"--acknowledge-dynamic-jobs":""}]}
    ],
    "start-from-checkpoint":[
        {"type":"int","real_start":[{"startFromCheckpoint":"{}"}],"batsim":[{"--start-from-checkpoint":"{}"}]},
        {"type":"none","real_start":[{"startFromCheckpoint":false}]}
    ],
    "start-from-checkpoint-keep":[
        {"type":"int","real_start":[{"startFromCheckpointKeep":"{}"}]},
        {"type":"none","real_start":[{"startFromCheckpointKeep":false}]}
    ],
    "start-from-frame":[
        {"type":"int","real_start":[{"startFromFrame":"{}"}]},
        {"type":"none","real_start":[{"startFromFrame":false}]}
    ],
    "discard-last-frame":[
        {"type":"bool","real_start":[{"discardLastFrame":"{}"}]},
        {"type":"none","real_start":[{"discardLastFrame":false}]}
    ],
    "checkpoint-batsim-signal":{"type":"int","batsim":[{"--checkpoint-batsim-signal":"{}"}]},
    "checkpoint-batsim-keep":{"type":"int","batsim":[{"--checkpoint-batsim-keep":"{}"}]},
    "output-svg":{"type":"string","regex":"^(none|all|short)$","batsim":[{"--output-svg":"{}"}]},
    "output-svg-method":{"type":"string","regex":"^(svg|text|both)$","batsim":[{"--output-svg-method":"{}"}]},
    "svg-frame-start":{"type":"int","batsim":[{"--svg-frame-start":"{}"}]},
    "svg-frame-end":{"type":"int","batsim":[{"--svg-frame-end":"{}"}]},
    "svg-output-start":{"type":"int","batsim":[{"--svg-output-start":"{}"}]},
    "svg-output-end":{"type":"int","batsim":[{"--svg-output-end":"{}"}]}       
}